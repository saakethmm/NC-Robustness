{
    "name": "Experiment",
    "n_gpu": 1,
    "seed": 12,

    "comet": {
        "api": "1TdBFrcmHJYRNzVCHNwIKS1p3",
        "offline": true 
    },

    "arch": {
        "type": "resnet18",
        "args": {"num_classes": 10,
                 "norm_layer_type": "bn",
                 "conv_layer_type": "conv",
                 "linear_layer_type": "linear",
                 "activation_layer_type": "relu",
		 "etf_fc": false}
    },

    "num_classes": 10,

    "data_loader": {
        "type": "CIFAR10DataLoader",
	"args":{
            "data_dir": "/data/xinshiduo/MyDataset/",
            "batch_size": 128,
            "shuffle": true,
            "num_batches": 0,
            "validation_split": 0,
            "num_workers": 0,
            "pin_memory": true
        }
    },

    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.01,
            "momentum": 0.9,
            "weight_decay": 1e-3
        }
    },


    "train_loss": "cross_entropy",
    "val_loss": "cross_entropy",
    "metrics": [
        "my_metric", "my_metric2"
    ],

    "lr_scheduler": {
        "type": "CosineAnnealingWarmRestarts",
        "args": {
            "T_0": 500,
            "eta_min": 0.0001
        }
    },

    "trainer": {
        "epochs": 500,
        "save_dir": "./res_saved/",
        "save_period": 1,
        "verbosity": 2,
        "label_dir": "./res_saved/",
        "monitor": "max val_my_metric",
        "early_stop": 2000,
        "_percent": "Percentage of noise",
        "percent": 0.0,
        "_subset_percent": "Percentage of training data to use",
        "subset_percent": 1.0,
        "_asym": "Asymmetric noise if true",
        "asym": false,
        "_sym": "Symmetric noise if true",
        "sym": false,
	"do_adv": false,
    "OCNN": false,
	"lamb_ocnn": 0.001,
	"fgsm_step": 8,
	"adv_clip_eps": 8,
	"adv_repeats": 4
    },
    "pgd_attack": {
        "K": 10,
        "step": 2
        }
}
               

